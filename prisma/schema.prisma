// 1
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 2
generator client {
  provider = "prisma-client-js"
}

// 3
model Letter {
  id          Int      @id @default(autoincrement()) // 4
  createdAt   DateTime @default(now()) // 5
  description String
  url         String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String
  email     String   @unique
  password  String
  letters   Letter[]
}
